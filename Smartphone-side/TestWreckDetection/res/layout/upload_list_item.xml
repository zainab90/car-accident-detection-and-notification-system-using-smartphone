<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
     android:layout_height="?android:attr/listPreferredItemHeight" 
     android:layout_marginBottom="5dp">
     <ImageView
        android:id="@+id/upload_icon"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:layout_margin="10dp"
      android:contentDescription="TODO"/>
     
    <TextView
        android:id="@+id/upload_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/upload_icon"
      android:layout_marginTop="15dp"
     
         android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/green_list" 
        android:typeface="sans"
        android:gravity="center_vertical"/>
    <ImageView
        android:id="@+id/upload_icon_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/upload_title"
        android:background="@drawable/ic_action_remove"
        android:contentDescription="@string/image"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp" />


       <ImageView
           android:id="@+id/upload_loc"
           android:layout_width="20dp"
           android:layout_height="20dp"
              android:layout_below="@+id/upload_icon_remove"
           android:src="@drawable/attach_loc_1"
             android:layout_toRightOf="@+id/progressBar1"
              android:contentDescription="@string/location"
              android:layout_margin="7dp"
               />

       <TextView
           android:id="@+id/upload_status"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/upload_title"
           android:layout_toRightOf="@+id/upload_icon"
           android:text=""
           android:typeface="sans"
           android:textAppearance="?android:attr/textAppearanceSmall" 
           android:textColor="@color/green_list"/>
          
             <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
         android:layout_below="@+id/upload_title"
           android:layout_toRightOf="@+id/upload_icon"
           android:visibility="invisible"
         />
       
    </RelativeLayout>
