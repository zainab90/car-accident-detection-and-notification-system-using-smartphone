<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/black_background_1" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/net_Con"
         android:textSize="18sp"
        android:gravity="center"
            android:layout_margin="30dp"
            android:textStyle="bold"
           android:textColor="@color/green_list" />

    <ImageView 
        android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:src="@drawable/cloud_problem_128"
android:layout_gravity="center"             
        />
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        
        
        ></LinearLayout>
    <Button
        android:id="@+id/btnTestConn"
        style="@android:attr/buttonStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/green_list"
        android:text=" Try again" 
       />

</LinearLayout>
